{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "removeComments": true,
        "outDir": "./build",
        "jsx": "react",
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es5",
            "es6",
            "es2015",
            "es7",
            "es2016",
            "es2017"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}