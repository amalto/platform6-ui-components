        "target": "es2015",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "outDir": "build",
        "jsx": "react",
        "sourceMap": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es5",
            "es6",
            "es2015",
            "es7",
