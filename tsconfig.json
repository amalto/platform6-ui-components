{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "baseUrl": ".",
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "paths": {
      "~components/*": [
        "./src/components/*"
      ],
      "~global/*": [
        "./src/global/*"
      ],
      "~shared/*": [
        "./src/shared/*"
      ],
      "~utils/*": [
        "./src/utils/*"
      ]
    },
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "types/jsx.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "loader",
    "**/*.stories.ts"
  ]
}